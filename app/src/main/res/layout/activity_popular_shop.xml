<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context=".PopularShop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/textView71"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Popular Shops"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/cust_search_box"
            app:queryHint="Search Here" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/textView77"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="16dp"
                            android:text="Featured Shops"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/textView74"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/SeeAllFeaturedShopImageView"
                            android:text="See All"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <ImageView
                            android:id="@+id/SeeAllFeaturedShopImageView"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_arrow_forward" />

                    </RelativeLayout>

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="180dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:divider="@color/black"
                            android:dividerHeight="0.0px"
                            android:elevation="20dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="20dp"
                            app:cardPreventCornerOverlap="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/DatablitzStoreImageView"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/datablitz_store" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">

                                    <TextView
                                        android:id="@+id/textView75"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="5dp"
                                        android:gravity="center"
                                        android:text="Datablitz"
                                        android:textColor="@color/black"
                                        android:textSize="20sp" />

                                    <CheckBox
                                        android:id="@+id/checkBox"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginEnd="5dp"
                                        android:button="@drawable/selector_my_favorite"
                                        app:useMaterialThemeColors="false" />

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/textView76"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="10dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/second_floor_location"
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="16dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:divider="@color/black"
                            android:dividerHeight="0.0px"
                            android:elevation="20dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="20dp"
                            app:cardPreventCornerOverlap="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/UniqloStoreImageView"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/uniqlo_store" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">

                                    <TextView
                                        android:id="@+id/textView78"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="5dp"
                                        android:gravity="center"
                                        android:text="Uniqlo"
                                        android:textColor="@color/black"
                                        android:textSize="20sp" />

                                    <CheckBox
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginEnd="5dp"
                                        android:button="@drawable/selector_my_favorite"
                                        app:useMaterialThemeColors="false" />

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/textView79"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="10dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/second_floor_location"
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="16dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:divider="@color/black"
                            android:dividerHeight="0.0px"
                            android:elevation="20dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="20dp"
                            app:cardPreventCornerOverlap="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/FullyBookedStoreImageView"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/fully_booked_store" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">

                                    <TextView
                                        android:id="@+id/textView80"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="5dp"
                                        android:ellipsize="end"
                                        android:text="Fully Booked"
                                        android:textColor="@color/black"
                                        android:textSize="20sp" />

                                    <CheckBox
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginEnd="5dp"
                                        android:button="@drawable/selector_my_favorite"
                                        app:useMaterialThemeColors="false" />

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/textView81"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="10dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/second_floor_location"
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/textView82"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="16dp"
                            android:text="Discoveries"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/textView83"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/DiscoveriesImageView"
                            android:text="See All"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <ImageView
                            android:id="@+id/DiscoveriesImageView"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_arrow_forward" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:divider="@color/black"
                        android:dividerHeight="0.0px"
                        android:elevation="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="20dp"
                        app:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView84"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="H&amp;M"
                                android:textColor="@color/black"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView85"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView84"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:text="@string/hm_desc"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/HMStoreImageView"
                                android:layout_width="130dp"
                                android:layout_height="100dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                app:srcCompat="@drawable/hm_logo" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:divider="@color/black"
                        android:dividerHeight="0.0px"
                        android:elevation="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="20dp"
                        app:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView86"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nike"
                                android:textColor="@color/black"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView87"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView86"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:text="@string/nike_desc"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/NikeStoreImageView"
                                android:layout_width="130dp"
                                android:layout_height="100dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                app:srcCompat="@drawable/nike_logo" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:divider="@color/black"
                        android:dividerHeight="0.0px"
                        android:elevation="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="20dp"
                        app:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView88"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hermes"
                                android:textColor="@color/black"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView89"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView88"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:text="@string/hermes_desc"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/HermesStoreImageView"
                                android:layout_width="130dp"
                                android:layout_height="100dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                app:srcCompat="@drawable/hermes_logo" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:divider="@color/black"
                        android:dividerHeight="0.0px"
                        android:elevation="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="20dp"
                        app:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView90"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Skechers"
                                android:textColor="@color/black"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView91"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView90"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:text="@string/skechers_desc"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/SkeschersStoreImageView"
                                android:layout_width="130dp"
                                android:layout_height="100dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                app:srcCompat="@drawable/skechers_logo" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="20dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:divider="@color/black"
                        android:dividerHeight="0.0px"
                        android:elevation="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="20dp"
                        app:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView92"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Puma"
                                android:textColor="@color/black"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView93"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView92"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:text="@string/puma_desc"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/PumaStoreImageView"
                                android:layout_width="130dp"
                                android:layout_height="100dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                app:srcCompat="@drawable/puma_logo" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>